<div class="wrapper">
    <div style="display:inline-block; border: 1px solid black; padding: 20px;">
        <h1>Registration</h1>
        <!-- registration -->
        <form action='/users/create' method='post'>
            <input type='hidden' name="authenticity_token" value="<%=form_authenticity_token%>">
            <div>
                <label style="display:inline-block; width:100px;">First Name:</label>
                <input type="text" name="user[first_name]">
            </div>

            <div>
                <label style="display:inline-block; width:100px;">Last Name:</label>
                <input type="text" name="user[last_name]">
            </div>

            <div>
                <label style="display:inline-block; width:100px;">Email:</label>
                <input type="text" name="user[email]">
            </div>

            <div>
                <label style="display:inline-block; width:100px;">Location:</label>
                <input style="display:inline-block; width:107px;" type="text" name="user[location]">
                <select name="user[state]">
                    <option value="WA">WA</option>
                    <option value="CA">CA</option>
                    <option value="NY">NY</option>
                </select>
            </div>

            <div>
                <label style="display:inline-block; width:100px;">Password:</label>
                <input type="text" name="user[password]">
            </div>
            <p>*Password should be at least 8 characters.</p>
            <div>
                <label style="display:inline-block; width:100px;">Confirm PW:</label>
                <input type="password" name="user[password_confirmation]">
            </div>
            <br>
            <input style="margin-left:198px;" type="submit" value="Register">
        </form>
    </div>

    <div style="display:inline-block; vertical-align:top; margin-left: 50px; border: 1px solid black; padding: 20px;">
        <h1>Login</h1>
        <form action='/events/login' method='post'>
            <input type='hidden' name="authenticity_token" value="<%=form_authenticity_token%>">
            <div>
                <label style="display:inline-block; width:100px;">Email: </label>
                <input type="text" name="user[email]">
            </div>

            <div>
                <label style="display:inline-block; width:100px;">Password: </label>
                <input type="password" name="user[password]">
            </div>
            <br>
            <input style="margin-left:216px;" type="submit" value="Login">
        </form>
    </div>

</div>